{
    "name": "Context",
    "version": "0.0.1",
    "manifest_version": 2,
    "background": {
			"scripts": ["javascripts/background.js"],
			"persistent": true
		},
		"content_scripts": [
	    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["javascripts/jquery-2.1.1.min.js", "javascripts/content.js"],
        "css": ["css/sidebar.css"],
        "run_at": "document_end"
	    }
		],
		"browser_action": {
	    "default_icon": {
	        "38": "icons/38x38.png"
	    },
	    "default_title": "Contextual Conversation"
		},
		"permissions": [
      "tabs", "http://104.131.117.55:3000/", "http://localhost/"
    ],
    "web_accessible_resources": [
	    "index.html"
	  ]
}