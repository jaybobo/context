{
    "name": "Context",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Context",
        "popup": "index.html"
    },
    "background": {
	    "scripts": ["javascripts/background.js"],
	    "persistent": true
		},
		"content_scripts": [
	    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["javascripts/content.js"]
	    }
		],
		"browser_action": {
	    "default_icon": {
	        "38": "icons/38x38.png"
	    },
	    "default_title": "Contextual Conversation",
	    "default_popup": "popup.html"
		},
		"devtools_page": "devtools.html"
}